            <li>
              <%= link_to "ロケチリ！って？", home_about_path, class:"btn btn-outline-light mr-4 mb-1" %>
            </li>
            <li>
              <%= link_to "新規登録", new_user_registration_path, class:"btn btn-outline-light mr-4 mb-1" %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path, class:"btn btn-outline-light mb-1" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
